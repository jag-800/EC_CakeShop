<div class="row">
  <div class="offset-md-1">
    <h5 class="px-4 table-secondary mb-4">ジャンル一覧・追加</h5>
  </div>
</div>

<%= form_with model: @genre, url:'/admin/genres' do |f| %>

  <div class="form-group row">
    <label for="inputName" class="col-sm-2 col-form-label">ジャンル名</label>
    <div class="col-sm-5">
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder: "ジャンル名", class:"form-control" %>
    </div>
    <%= f.submit '新規登録', class: "btn btn-success" %>
  </div>

<% end %>

<table class="table">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %><tr>
      <td><%= genre.name %></td>
      <td>
        <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
      </td>
    </tr><% end %>
  </tbody>
</table>

