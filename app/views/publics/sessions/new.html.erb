<div class="row">
  <div class="offset-md-1">
    <h5 class="px-4 table-secondary mb-4">ログイン</h5>
  </div>
</div>

<div class="row">
  <div class="offset-md-1">
    <h5 class="py-2 px-3 table-secondary mb-4">会員の方はこちらから</h5>
  </div>
</div>

<%= form_with model: @customer, url: customer_session_path do |f| %>
  <div class="form-group row">
    <label for="inputEmail" class="col-sm-2 col-form-label">メールアドレス</label>
    <div class="col-sm-5">
      <%= f.email_field :email, autofocus: true, id:"inputEmail", placeholder:"sample@example.com", class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputEmail" class="col-sm-2 col-form-label">パスワード</label>
    <div class="col-sm-5">
      <%= f.password_field :password, autofocus: true, id:"inputPassword", autocomplete: "current-password", class:"form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "ログイン", class:"btn btn-primary" %>
  </div>
<% end %>

<div class="row">
  <div class="offset-md-1">
    <h5 class="py-2 px-3 table-secondary mb-4">会員登録がお済みでない方</h5>
  </div>
</div>
<p><%= render "public/shared/links" %></p>
